{
  "compilerOptions": {
      "outDir": "build",
      "module": "commonjs",
      "target": "es2018",
      "lib": ["esnext"],
      "sourceMap": true,
      "allowJs": false,
      "declaration": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "baseUrl": "src"
  },
  "include": [
      "src"
  ],
  "exlude": [
      "node_modules"
  ]
}